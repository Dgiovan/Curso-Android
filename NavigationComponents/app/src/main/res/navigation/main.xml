<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/fragmenta">

    <fragment
        android:id="@+id/fragmenta"
        android:name="com.example.navigationcomponents.Fragmenta"
        android:label="fragment_fragmenta"
        tools:layout="@layout/fragment_fragmenta" >
        <action
            android:id="@+id/navigationNext"
            app:destination="@id/fragmentb"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/fragmentb"
        android:name="com.example.navigationcomponents.fragmentb"
        android:label="fragment_fragmentb"
        tools:layout="@layout/fragment_fragmentb">
        <action
            android:id="@+id/navigationNext"
            app:destination="@id/fragmenttc"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/fragmenta"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmenttc"
        android:name="com.example.navigationcomponents.fragmenttc"
        android:label="fragment_fragmenttc"
        tools:layout="@layout/fragment_fragmenttc" >
        <action
            android:id="@+id/action_fragmenttc_to_fragmenta"
            app:destination="@id/fragmenta" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="no value" />
    </fragment>
</navigation>